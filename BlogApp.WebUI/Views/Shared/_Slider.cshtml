@model IEnumerable<Blog> 

<div id="carouselExampleCaptions" class="carousel slide mb-3" data-ride="carousel">


    <ol class="carousel-indicators">

        @for (int i = 0; i < Model.Count(); i++)
        {
            @* İlk elemanın sınıfına active ekle*@
            if (i == 0)
            {
                <li data-target="#carouselExampleCaptions" data-slide-to="@i" class="active"></li>
            }
            else
            {
                <li data-target="#carouselExampleCaptions" data-slide-to="@i"></li>
            }
        }
    </ol>

    <div class="carousel-inner">

        @{ var index = 0; }
        @foreach (var item in Model)
        {
            //yine active sınıfı için bir kontrol mekanizması kuruyorum

            if (index == 0)
            {
                <div class="carousel-item active" style="max-height: 250px;max-width:900px;">
                    <img src="~/img/@item.Image" class="d-block w-100" alt="@item.Title"/>
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@item.Title</h5>
                        <p>@item.Description</p>
                    </div>
                </div>
                index++;
            }
            else
            {
                <div class="carousel-item" style="max-height: 250px;max-width:900px;">
                    <img src="~/img/@item.Image" class="d-block w-100" alt="@item.Title"/>
                    <div class="carousel-caption d-none d-md-block">
                        <h5>@item.Title</h5>
                        <p>@item.Description</p>
                    </div>
                </div>
            }
        }


    </div>


    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>