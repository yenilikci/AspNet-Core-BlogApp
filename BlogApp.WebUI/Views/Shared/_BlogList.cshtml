@model IEnumerable<Blog>

@{
    Layout = null;
}

@if (Model.Count() == 0)
{
    <div class="alert alert-warning mt-2">Kayıt Bulunamadı</div>
}
else
{
    @foreach (var item in Model)
    {

        <div class="card mb-3">
            <div class="card-header">
                @item.Title
            </div>
            <img class="card-img-top" src="~/img/@item.Image" alt="Alternate Text" />
            <div class="card-body">
                <h5 class="card-title">@item.Title</h5>
                <p class="card-text">@item.Description</p>
                <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Blog Details</a>
            </div>
        </div>
    }
}

